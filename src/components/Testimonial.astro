---
import { Image } from 'astro:assets';

const testimonials = [
  {
    quote: "Door delivery service is very helpful",
    author: "User 1",
    avatar: "/user.png"
  },
  {
    quote: "All Medicines are available....",
    author: "User 2",
    avatar: "/user.png"
  },
  {
    quote: "Service is good",
    author: "User 3",
    avatar: "/user.png"
  }
];
---

<section class="py-20 border-grey-500 border-2 p-8 relative overflow-hidden">
  <div class="container-custom relative">
    <div class="text-left  mx-auto animate-on-scroll">
      <h2 class="text-blue  text-3xl md:text-4xl font-bold">
        Testimonials
      </h2>
    </div>
    
    <div class="mt-16 grid grid-cols-1 md:grid-cols-3 gap-8">
      {testimonials.map((testimonial, index) => (
        <div 
          class="testimonial-card animate-on-scroll group" 
          style={`animation-delay: ${index * 0.15}s`}
        >
          <div class="flex items-center mb-6">
            <div class="relative mr-4 overflow-hidden rounded-full transition-all duration-300 group-hover:shadow-md">
              <img 
                src={testimonial.avatar} 
                alt={testimonial.author} 
                class="w-12 h-12 rounded-full transition-transform duration-500 group-hover:scale-110"
              />
            </div>
            <div>
              <h4 class="font-semibold transition-colors duration-300 group-hover:text-purple">{testimonial.author}</h4>
            </div>
          </div>
          <p class="italic relative">
            {testimonial.quote}
          </p>
        </div>
      ))}
    </div>
  </div>
</section>
