  <script>
    document.addEventListener("astro:page-load", () => {
      const containers = document.querySelectorAll('.card-container');
      const scrollStep = 220;
      const scrollInterval = 3000;

      let autoScrollEnabled = true; // Boolean flag to control auto-scroll
      
      containers.forEach((container,index) => {
        const nextButton = container.parentElement ? container.parentElement.querySelector('.next-button') : null;
        const prevButton = container.parentElement ? container.parentElement.querySelector('.prev-button') : null;

        nextButton?.addEventListener('click', () => {
          container.scrollBy({
            left: scrollStep,
            behavior: 'smooth'
          });
        });

        prevButton?.addEventListener('click', () => {
          container.scrollBy({
            left: -scrollStep,
            behavior: 'smooth'
          });
        });

        let scrollAmount = 0;
        let isHovered = false;
        const direction = index % 2 === 0 ? 1 : -1; 

        container.addEventListener("mouseenter", () => isHovered = true);
        container.addEventListener("mouseleave", () => isHovered = false);

        // Auto-scroll logic based on boolean flag
        setInterval(() => {
          if (isHovered || !autoScrollEnabled) return; // Prevent auto-scroll if hovered or disabled
          const maxScroll = container.scrollWidth - container.clientWidth;
          
          // scrollAmount += scrollStep;
          scrollAmount += direction * scrollStep;
          if (scrollAmount < 0) scrollAmount = maxScroll;
          else if (scrollAmount > maxScroll) scrollAmount = 0;

          container.scrollTo({
            left: scrollAmount,
            behavior: 'smooth'
          });
        }, scrollInterval);
      });
    });
  </script>
